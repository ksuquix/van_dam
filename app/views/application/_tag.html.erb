<% 
  paramtag = [*params[:tag]]
    tagclass = "secondary"
  if ([*selected].include?(tag))
    paramtag -= [tag.name]
    tagclass="success"
  elsif  defined?(commontags) && commontags.include?(tag) 
    tagclass="primary"
    paramtag += [tag.name]
  else
    paramtag += [tag.name]
  end 
  params.permit!
%>
<%=link_to tag.name, params.merge(tag: paramtag), {class: "badge rounded-pill bg-#{tagclass} tag", data: {bulk_item_tags: "#{model_id}"}} %>